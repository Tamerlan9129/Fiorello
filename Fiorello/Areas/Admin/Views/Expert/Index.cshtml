@using Fiorello.Areas.Admin.ViewModels.Expert
@model ExpertIndexViewModel

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Expert</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="expert" asp-area="admin">CREATE EXPERT</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>FullName</th>
                                        <th>Position</th>
                                        <th>Photo</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var expert in Model.Experts)
                                    {
                                        <tr>
                                            <td>@expert.Id</td>
                                            <td>@expert.Name @expert.Surname</td>
                                            <td> @expert.Position</td>
                                            <td><img src="~/assets/img/@expert.PhotoName" /></td>
                                            <td>
                                                <a asp-action="update" asp-controller="expert" asp-area="admin" asp-route-id="@expert.Id" class="btn btn-primary">Update </a>
                                                <a asp-action="delete" onclick="confirm('Are you sure')" asp-controller="expert" asp-area="admin" asp-route-id="@expert.Id" class="btn btn-danger">Delete </a>
                                                <a asp-action="details" asp-controller="expert" asp-area="admin" asp-route-id="@expert.Id" class="btn btn-primary">Details </a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>