@using Fiorello.ViewModels
@model ProductLoadMoreViewModel



@{
    foreach (var products in Model.Products)
    {

        <div class="mkdf-pli mkdf-item-space ">
            <div class="mkdf-pli-inner">
                <div class="mkdf-pli-image">
                    @{
                        if (@products.Status.ToString() == "New")
                        {
                            <span class="mkdf-pli-new-product">New</span>
                        }
                        else if (@products.Status.ToString() == "Sale")
                        {
                            <span class="mkdf-pli-onsale">Sale</span>
                        }
                        else
                        {
                            <span class="mkdf-pli-out-of-stock">Sold</span>
                        }
                    }
                    <img width="620" height="800"
                 src="~/assets/img/@products.MainPhotoName"
                 class="attachment-woocommerce_single size-woocommerce_single wp-post-image"
                 alt="h"
                 sizes="(max-width: 620px) 100vw, 620px"
                 loading="eager" />
                </div>
                <a class="mkdf-pli-link" itemprop="url"
           asp-action="details" asp-controller="product" asp-route-id="@products.Id"
           title="Schefflera"></a>
            </div>
            <div class="mkdf-pli-text-wrapper">
                <h6 itemprop="name"
                class="entry-title mkdf-pli-title">
                    <a itemprop="url"
                   href="../../product/schefflera/index.html">@products.Title</a>
                </h6>
                <div class="mkdf-pli-add-to-cart mkdf-default-skin">
                    <a rel="nofollow"
                   href="indexcb0b.html?add-to-cart=246"
                   data-quantity="1" data-product_id="246"
                   data-product_sku="563654"
                   class="button add_to_cart_button ajax_add_to_cart mkdf-button">
                        Add
                        to cart
                    </a>
                </div>
                <div class="mkdf-pli-price">
                    <span class="woocommerce-Price-amount amount">
                        <span class="woocommerce-Price-currencySymbol">&#036;</span>@products.Price
                    </span>
                </div>
            </div>
        </div>
    }
}

@if (Model.IsLast)
{
    <script type="text/javascript">

        jQuery(document).ready((function ($) {
            function myFunc() {
                $("#loadMore").remove();
            }
            myFunc();
        }))

    </script>
}